@model BookViewModel

<h1 class="offset-md-2">Add Book</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-controller="Form" asp-action="Book" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control bg-transparent" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreName"></label>
                <input asp-for="GenreName" class="form-control bg-transparent" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Language"></label>
                <input asp-for="Language" class="form-control bg-transparent" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo"></label>
                <input asp-for="Photo" class="form-control bg-transparent" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ISBN"></label>
                <input asp-for="ISBN" class="form-control bg-transparent" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pages"></label>
                <input asp-for="Pages" class="form-control bg-transparent" />
                <span asp-validation-for="Pages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control bg-transparent" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAddedToLibrary"></label>
                <input asp-for="DateAddedToLibrary" class="form-control bg-transparent" />
                <span asp-validation-for="DateAddedToLibrary" class="text-danger"></span>
            </div>


            <div class="align-content-center" style="text-align:center; font-size:20px"><strong>Author Details</strong></div>

            <div class="form-group">
                <label asp-for="AuthorsFirstName"></label>
                <input asp-for="AuthorsFirstName" class="form-control bg-transparent" />
                <span asp-validation-for="AuthorsFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorsLastName"></label>
                <input asp-for="AuthorsLastName" class="form-control bg-transparent" />
                <span asp-validation-for="AuthorsLastName" class="text-danger"></span>
            </div>


            <div class="align-content-center" style="text-align:center; font-size:20px"><strong>Publication Details</strong></div>

            <div class="form-group">
                <label asp-for="PublisherName"></label>
                <input asp-for="PublisherName" class="form-control bg-transparent" />
                <span asp-validation-for="PublisherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationDate"></label>
                <input asp-for="PublicationDate" class="form-control bg-transparent" />
                <span asp-validation-for="PublicationDate" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-primary">Add Book</button>
        </form>
    </div>

</div>