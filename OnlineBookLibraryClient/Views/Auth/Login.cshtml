@model LoginViewModel
@{
    ViewData["Title"] = "Login";

}
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<div class="container row login">
    <div class="card bg-dark justify-content-sm-center align-content-center col-lg-8 offset-lg-2 col-sm-12" style="width:100%">
        <div class="card-body bg-dark text-white">
            <h2 class="text-xl-center">Login</h2>
            <form class="col" action="" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <div>
                        <label class="" asp-for="@Model.Email"></label>
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                        </div>
                        <input class="form-control border-0" type="text" placeholder="Email" asp-for="Email" />
                    </div>
                    <span asp-validation-for="Email" class="text-warning small"></span>
                </div>

                <div class="form-group">
                    <div class="">
                        <label class="" asp-for="@Model.Password"></label>
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        </div>
                        <input class="form-control border-0" placeholder="Password" type="password" asp-for="Password" />
                    </div>
                    <span asp-validation-for="Password" class="text-warning small"></span>
                </div>


                <div class="form-group row text-white">
                    <div class="col-8 offset-2">
                        <input type="submit" asp-action="post" value="Login" class="btn btn-outline-primary btn-dark text-white mt-2 ml-5 col-6" />
                    </div>
                </div>
            </form>
            <p class="text-white mt-4 ml-5">Don't have an account?? <a asp-controller="Auth" asp-action="Register">Register</a></p>
        </div>
    </div>
</div>