@model LoginViewModel
@{
    ViewData["Title"] = "Login";

}
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<div class="container">
    <div class="card col-4 mx-auto mt-10">

        <form class="form" action="" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">

                <label class="col-12" asp-for="@Model.Email">
                </label>
                <input class="col-12" type="text" placeholder="Email" asp-for="Email" value="" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label class="col-12" asp-for="@Model.Password">
                    Password
                </label>
                <input class="col-12" placeholder="Password" type="password" value="" asp-for="Password" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>

            <div class="form-group d-flex">
                <div class="form-check col-6">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label"> Remember Me?</label>
                </div>
                <span asp-validation-for="RememberMe" class="text-warning"></span>
                <p>Click <a asp-action="Register" asp-controller="Auth">Here</a> to register</p>
            </div>

            <div class="form-group">
                <input type="submit" asp-action="post" value="Login" class="btn btn-primary col-12" />
            </div>
        </form>
    </div>
</div>