@model RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
}
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<div class="container">
    <div class="card col-4 mx-auto mt-10">

        <form class="form" action="" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">

                <label class="col-12" asp-for="@Model.FirstName">
                </label>
                <input class="col-12" type="text" placeholder="FirstName" asp-for="FirstName" value="" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>
            <div class="form-group">

                <label class="col-12" asp-for="@Model.LastName">
                </label>
                <input class="col-12" type="text" placeholder="LastName" asp-for="LastName" value="" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>
            <div class="form-group">

                <label class="col-12" asp-for="@Model.Email">
                </label>
                <input class="col-12" type="text" placeholder="Email" asp-for="Email" value="" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label class="col-12" asp-for="@Model.Password">
                    Password
                </label>
                <input class="col-12" placeholder="Password" type="password" value="" asp-for="Password" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>

            <div class="form-group">

            </div>

            <div class="form-group">
                <input type="submit" asp-action="post" value="Register" class="btn btn-primary col-12" />
            </div>
        </form>
    </div>
</div>