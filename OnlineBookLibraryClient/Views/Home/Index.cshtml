@model IEnumerable<BookResponseViewModel>
@{
    ViewData["Title"] = "Home Page";
}


<div class="d-flex text-center row justify-content-around">
    <div class="col-12"><strong>What Interest you?</strong></div>
    <div class="col-6 pl-4 pr-4">Fiction Books</div>
    <div class="col-6 pl-4 pr-4">Non-Fiction Books</div>
    <div class="d-flex col-6 row p-4">
        <input class="m-1" style="border-radius:15px; width:45%" type="button" name="name" value="Drama" />
        <input class="m-1" style="border-radius:15px; width:45%" type="button" name="name" value="Horror" />
        <input class="m-1" style="border-radius:15px; width:45%" type="button" name="name" value="Mystery" />
        <input class="m-1" style="border-radius:15px; width:45%" type="button" name="name" value="Sci-fi" />
    </div>
    <div class="d-flex col-6 row p-4">
        <input class="m-1" style="border-radius:15px; width:45%" type="button" name="name" value="Art" />
        <input class="m-1" style="border-radius:15px; width:45%" type="button" name="name" value="Biography" />
        <input class="m-1" style="border-radius:15px; width:45%" type="button" name="name" value="Sports" />
        <input class="m-1" style="border-radius:15px; width:45%" type="button" name="name" value="Travel" />
    </div>

    <div class="d-flex text-center row">
        @foreach (var item in Model)
        {
            <div class="card col-lg-3 col-sm-6 col-md-4">
                <div class="card-body">
                    <div class="d-flex justify-content-center align-items-center">
                        <img src = @item.Photo alt="book1" style="min-width:98%" />
                    </div>
                </div>
                <div class="card-footer">
                    <div>
                        <strong>@item.Title-</strong>
                    </div>
                    <div>
                        <strong>@item.GenreName</strong>
                    </div>
                    <div>
                        <small>@item.AuthorsFirstName @item.AuthorsLastName</small><br />

                        @for (int n = 1; n <= 5; n++)
                        {
                            if (item.Rating >= n)
                            {
                                <i class="fas fa-star"></i>
                            }
                            else if (item.Rating < n && item.Rating > (n - 1))
                            {
                                <i class="fas fa-star-half-alt"></i>
                            }
                            else
                            {
                                <i class="far fa-star"></i>
                            }
                        }
                    <a asp-controller="Auth" asp-action="UserDashboard" method="Get">See More</a>
                    </div>
                </div>
            </div>
        }
    </div>

