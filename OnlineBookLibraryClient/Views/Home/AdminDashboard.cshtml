@model UserViewModel
<div class="container" style="height:100%;">
    <div class="row">
        <div class="col-3 mt-2">

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Images/book1.jpg" alt="picture1" style="width:100%;">
                    </div>

                    <div class="item">
                        <img src="~/Images/The_Ventilator_Project.jpeg" alt="picture2" style="width:100%;">
                    </div>

                    <div class="item">
                        <img src="~/Images/mysteryLawyer.jpg" alt="picture3" style="width:100%;">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-9">
            <div class="input-group border-0">
                <input type="search" style="border-radius:50px;" />

                <div class="btn-group">
                    <button type="button" class="btn btn-outline-info btn-sm mr-4 mb-4 mt-4 dropdown-toggle offset-3" data-toggle="dropdown" style="border-radius:50px;"><small><strong>Search</strong></small></button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item small" href="#" onMouseOver="this.style.backgroundColor='#404040', this.style.color='white'" onMouseOut="this.style.backgroundColor='#FFFFFF', this.style.color='black'">Search User by Email</a>
                        <a class="dropdown-item small" href="#" onMouseOver="this.style.backgroundColor='#404040', this.style.color='white'" onMouseOut="this.style.backgroundColor='#FFFFFF', this.style.color='black'">Search User by Username</a>
                        <a class="dropdown-item small" href="#" onMouseOver="this.style.backgroundColor='#404040', this.style.color='white'" onMouseOut="this.style.backgroundColor='#FFFFFF', this.style.color='black'">Search Book by Isbn </a>
                        <a class="dropdown-item small" href="#" onMouseOver="this.style.backgroundColor='#404040', this.style.color='white'" onMouseOut="this.style.backgroundColor='#FFFFFF', this.style.color='black'">Search Book by Title</a>
                        <a class="dropdown-item small" href="#" onMouseOver="this.style.backgroundColor='#404040', this.style.color='white'" onMouseOut="this.style.backgroundColor='#FFFFFF', this.style.color='black'">Search Book by Author</a>
                        <a class="dropdown-item small" href="#" onMouseOver="this.style.backgroundColor='#404040', this.style.color='white'" onMouseOut="this.style.backgroundColor='#FFFFFF', this.style.color='black'">Search Book by Publisher</a>
                        <a class="dropdown-item small" href="#" onMouseOver="this.style.backgroundColor='#404040', this.style.color='white'" onMouseOut="this.style.backgroundColor='#FFFFFF', this.style.color='black'">Search User by Year Published</a>
                    </div>
                </div>

            </div>


            <div class="btn-group">
                <button type="button" class="btn btn-outline-info btn-sm  dropdown-toggle offset-11" data-toggle="dropdown" style="border-radius:50px;"><small><strong>Add</strong></small></button>
                <div class="dropdown-menu">
                    <a class="dropdown-item small" href="#" onMouseOver="this.style.backgroundColor='#404040', this.style.color='white'" onMouseOut="this.style.backgroundColor='#FFFFFF', this.style.color='black'">Add User</a>
                    <a asp-controller="Form" asp-action="Book" method="Get" class="dropdown-item small" onMouseOver="this.style.backgroundColor='#404040', this.style.color='white'" onMouseOut="this.style.backgroundColor='#FFFFFF', this.style.color='black'">Add Book</a>
                    <a class="dropdown-item small" href="#" onMouseOver="this.style.backgroundColor='#404040', this.style.color='white'" onMouseOut="this.style.backgroundColor='#FFFFFF', this.style.color='black'">Add Publisher</a>
                    <a class="dropdown-item small" href="#" onMouseOver="this.style.backgroundColor='#404040', this.style.color='white'" onMouseOut="this.style.backgroundColor='#FFFFFF', this.style.color='black'">Add Author</a>
                </div>
            </div>


            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
